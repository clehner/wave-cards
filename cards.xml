<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs
    title="Cards"
    height="480"
    description="Play card games in Google Wave."
    author="Charles Lehner"
    author_email="celehner1@gmail.com">
   <Require feature="wave"/>
  </ModulePrefs>

  <Content type="html">
  <![CDATA[
  
  <script type="text/javascript" src="http://wave-api.appspot.com/public/wave.js"></script>
  <script type="text/javascript" src="http://wave-cards.googlecode.com/svn/trunk/classy.js"></script>
  <script type="text/javascript" src="http://wave-cards.googlecode.com/svn/trunk/transitions.js"></script>
  <script type="text/javascript" src="http://wave-cards.googlecode.com/svn/trunk/cards.js"></script>
  <link rel="stylesheet" href="http://wave-cards.googlecode.com/svn/trunk/cards.css" type="text/css">
  
  <div id="cardsWindow">
    <div id="buttons">
      <ul id="decks"></ul>
      <button id="addDeckBtn" title="Add a deck">+</button>
      <button id="rotateBtn" title="Turn the table">&crarr;</button>
    </div>
    
    <div id="cards"></div>
  </div>

  ]]></Content>
</Module>
